.row
  .col-xs-3= form.input :last_name
  .col-xs-3= form.input :first_name
  .col-xs-2= form.input :middle_name
  .col-xs-2= form.input :name_prefix
  .col-xs-2= form.input :name_suffix

.row
  .col-xs-2= form.input :relation_to_head
  .col-xs-2= form.input :race, as: :select, collection: CensusRecord.race_choices
  .col-xs-2= form.input :sex, as: :select, collection: CensusRecord.sex_choices
  .col-xs-2= form.input :birth_month, as: :select, collection: (1..12).map { |m| ["#{m} - #{Date::MONTHNAMES[m]}", m] }, include_blank: true
  .col-xs-2= form.input :birth_year
  .col-xs-2= form.input :age

.row
  .col-xs-3= form.input :marital_status, as: :select, collection: CensusRecord.marital_status_choices
  .col-xs-3= form.input :years_married, as: :integer, input_html: { min: 0 }
  .col-xs-3= form.input :num_children_born, as: :integer, input_html: { min: 0 }
  .col-xs-3= form.input :num_children_alive, as: :integer, input_html: { min: 0 }

.row
  .col-xs-3= form.input :pob
  .col-xs-3= form.input :pob_father
  .col-xs-3= form.input :pob_mother
  .col-xs-3= form.input :foreign_born, as: :boolean, inline_label: 'This person is foreign born.'

.row
  .col-xs-3= form.input :year_immigrated, as: :integer
  .col-xs-3= form.input :years_in_us, as: :integer
  .col-xs-3= form.input :naturalized_alien
  /.col-xs-3= form.input :language_spoken

.row
  .col-xs-4= form.input :profession
  .col-xs-4= form.input :industry
  .col-xs-4= form.input :unemployed_months, as: :integer

.row
  .col-xs-3= form.input :attended_school, as: :integer, inline_label: 'Attended School?', hint: 'No. of months'
  .col-xs-3= form.input :can_read, as: :boolean, inline_label: 'Can Read?'
  .col-xs-3= form.input :can_write, as: :boolean, inline_label: 'Can Write?'
  .col-xs-3= form.input :can_speak_english, as: :boolean, inline_label: 'Can speak English?'

.row
  .col-xs-3= form.input :owned_or_rented, as: :select, collection: Census1910Record.owned_or_rented_choices
  .col-xs-3= form.input :mortgage, as: :select, collection: Census1910Record.mortgage_choices
  .col-xs-3= form.input :farm_or_house, as: :select, collection: Census1910Record.farm_or_house_choices
  .col-xs-3= form.input :farm_schedule, as: :integer
