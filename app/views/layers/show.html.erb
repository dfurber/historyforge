<div class="row">
<div class="col-sm-8">
  <%=render 'layers/layermap', :object => @layer unless @layer.rectified_maps_count  < 1 || !@layer.is_visible?%>
</div>
<div class="col-sm-4">
  <% if @layer.description.present? %>
  <p>
    <b>Description</b><br />
    <%= @layer.description %>
  </p>
  <% end %>
  <% if @layer.source_uri.present? %>
  <p>
    <b>Source/ Bibliographic Ref URL</b><br />
    <%= @layer.source_uri %>
  </p>
  <% end %>
  <p><b>Export</b></p>
    <ul>
      <li>
      <%=link_to "WMS Capabilties URL", wms_layer_url(@layer, :request => "GetCapabilities", :service => "WMS", :version => "1.1.1")  %>  <br />
     </li>
     <li>
       <% josm_url = url_for(wms_layer_url(:id => @layer)) + "?request=GetMap&version=1.1.1&styles=&format=image/png&srs={proj}&exceptions=application/vnd.ogc.session.inimage&width={width}&height={height}&BBOX={bbox}&" %>
        <%= link_to("WMS link suitable for JOSM OpenStreetMap Editor", josm_url) %> <br />
      </li>
      <li>
        <% tile_url = url_for(tile_layer_url(:x => "{X}",:y => "{y}", :x => "{x}", :z => "{z}", :format =>"png")) %>
          Tiles (Google/OSM scheme): <%= URI.unescape(tile_url) %>
      </li>
      <li>
        <%= link_to("Download KML", layer_url(:id => @layer, :format=>:kml)) %>
      </li>
    </ul>

</div>
</div>
<h3>Maps <span id="view-maps-index-link"></span></h3>
<%= will_paginate @maps %>

<div id="loading-spinner" style="width:100px;margin-left:auto;margin-right:auto" class="hidden">Loading..... <br /><%= image_tag "spinner.gif" %> </div>
<div id="map_table_div">
  <table id="map_table" class="table table-condensed table-striped">
    <thead>
      <tr>
        <th>Map</th>
        <th>Title</th>
        <th>Last modified</th>
        <th>Status</th>
      </tr>
    </thead>

    <tbody id="results">
      <%= render :partial => 'maps/map', :collection => @maps unless @maps.nil? %>
    </tbody>
  </table>
  <div class="warper_pagination">
    <div id="search-pagination-bottom">
      <%= will_paginate @maps %>
    </div>
  </div>
</div>

<%= link_to("Create New Map Layer", new_layer_url) if can?(:create, Layer) %>
